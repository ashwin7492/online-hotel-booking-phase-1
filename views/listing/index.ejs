<% layout("/layouts/boilerplate") %>

    <body>
        <!-- <form method="get" action="/listings/new"><button type="submit">Create New Listing</button></form> -->
        <div class="row">
            <% for (let list of listings) { %>
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <a class="card-click" href="/listings/<%= list._id %>">
                        <div class="card index-card">
                            <img src="<%= list.image %>" class="card-img-top" alt="listing image"><div class="card-img-overlay"></div>
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= list.title %>
                                </h5>
                                <p class="card-text">
                                    &#8377 <%= list.price.toLocaleString("en-IN") %>
                                </p>
                                <p class="card-text">
                                    <%= list.location %>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            <% } %>
        </div>

    </body>


